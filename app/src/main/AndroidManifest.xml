<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.omp.onlinemusicplatform" >

    <!-- Permission - Internet Connect -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Network State Permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Write External Storage Permissions -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Record Audio Permissions -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:excludeFromRecents="true"
        android:finishOnTaskLaunch="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:noHistory="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:label="MainActivity"/>
        <activity
            android:name=".TrackListActivity"
            android:label="Tracks"
            android:icon="@drawable/ic_queue_music_black_48dp"/>
            <!--android:theme="@android:style/Theme.Holo.Light.DarkActionBar" -->
        <activity
            android:name=".AlbumsActivity"
            android:label="Genre"
            android:icon="@drawable/ic_library_music_black_48dp" />
        <!--android:theme="@android:style/Theme.Holo.Light.DarkActionBar" -->
        <activity
            android:name=".MediaPlayerActivity"
            android:label="@string/title_activity_media_player" >
        </activity>
        <activity
            android:name=".AudioCaptureActivity"
            android:label="@string/title_activity_audio_capture" >
        </activity>
        <activity
            android:name=".InsertActivity"
            android:label="@string/title_activity_insert" >
        </activity>
        <activity
            android:name=".UploadToServer"
            android:label="@string/title_activity_upload_to_server" >
        </activity>
        <activity
            android:name=".register"
            android:label="@string/title_activity_register" >
        </activity>
    </application>

</manifest>
